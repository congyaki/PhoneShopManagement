@model IEnumerable<PhoneShop.Data.Entities.OrderDetail>

@{
    ViewData["Title"] = "Chi Tiết Đơn Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="mb-4 font-weight-bold text-center">Danh Sách Đơn Hàng: @ViewBag.OrderID</h1>


<!-- DataTales -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-md-6 col-xs-12">
                <a class="btn btn-success" asp-action="Create" asp-route-orderID="@ViewBag.OrderID">Thêm Mới</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th class="text-center align-middle">
                            ID Đơn Hàng
                        </th>
                        <th class="text-center align-middle">
                            ID Sản Phẩm
                        </th>
                        <th class="text-center align-middle">
                            Tên Sản Phẩm
                        </th>
                        <th class="text-center align-middle">
                            Số Lượng
                        </th>
                        <th class="text-center align-middle">
                            Thành Tiền
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center align-middle">
                                @Html.DisplayFor(modelItem => item.Order.OId)
                            </td>
                            <td class="text-center align-middle">
                                @Html.DisplayFor(modelItem => item.Product.PId)
                            </td>
                            <td class="text-center align-middle">
                                @Html.DisplayFor(modelItem => item.Product.PName)
                            </td>
                            <td class="text-center align-middle">
                                @Html.DisplayFor(modelItem => item.ODQuantity)
                            </td>
                            <td class="text-center align-middle">
                                @Html.DisplayFor(modelItem => item.ODPrice)
                            </td>
                            <td class="text-center align-middle">
                                <a asp-action="Edit" asp-route-orderID="@item.OId" asp-route-productID="@item.PId" class="btn btn-warning btn-icon-split btn-block">
                                    <span class="text">Sửa</span>
                                </a>
                                <a asp-action="Delete" asp-route-orderID="@item.OId" asp-route-productID="@item.PId" class="btn btn-danger btn-icon-split btn-block">
                                    <span class="text">Xóa</span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <h3>Tổng tiền của đơn hàng là: @ViewBag.totalOrder</h3>
        </div>
    </div>
</div>
