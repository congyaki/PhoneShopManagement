@model PhoneShop.Data.Entities.Manufacturer

@{
    ViewData["Title"] = "Xóa Nhà Cung Cấp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="font-weight-bold">@ViewData["Title"]</h1>


<h3>Bạn có chắc chắn muốn xóa nhà cung cấp này không ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MEmail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MPhone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MPhone)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay Trở Lại Danh Sách</a>
    </form>
</div>
