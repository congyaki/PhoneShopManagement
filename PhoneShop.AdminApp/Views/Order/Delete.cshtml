@model PhoneShop.Data.Entities.Order

@{
    ViewData["Title"] = "Xóa Đơn Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="font-weight-bold">@ViewData["Title"]</h1>
<h3>Bạn có chắc chắn muốn xóa nhà cung cấp này không ?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ODate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ODate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OStatus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.CusName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="OId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay Trở Lại Danh Sách</a>
    </form>
</div>
