@model IEnumerable<PhoneShop.Data.Entities.Product>

@{
    ViewData["Title"] = "Sản Phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.CategoryID != null)
{
    <h2>Các sản phẩm trong thể loại @ViewBag.CategoryName</h2>
}
else
{
    <h1 class="h3 mb-2 text-gray-800">Tất cả @ViewData["Title"]</h1>

}
<!-- Page Heading -->

<!-- DataTales -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-md-6 col-xs-12">
                <a class="btn btn-success" asp-action="Create">Create New</a>
            </div>
            <div class="col-md-6 col-xs-12">
                <form asp-action="Index" method="get">
                    <div class="row">
                        <div class="col-md-9">
                            <input type="text" value="@ViewBag.Keyword" name="keyword" class="form-control" />
                            <input hidden value="@ViewBag.CategoryID" type="text" name="categoryID" />
                        </div>
                        <div class="cold-md-3">
                            <button type="submit" class="btn btn-primary">Search</button>
                            <button type="button" onclick="window.location.href='/Product/Index'" class="btn btn-dark">Reset</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.PName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Manufacturer)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.POriginalPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PStock)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Manufacturer.MName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.POriginalPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PStock)
                            </td>
                            <td>
                                <a asp-action ="Details" asp-route-id="@item.PId" class="btn btn-info btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-info-circle"></i>
                                    </span>
                                    <span class="text">Details</span>
                                </a>
                                <a asp-action ="Edit" asp-route-id="@item.PId" class="btn btn-warning btn-icon-split">
                                    <span class="icon text-white-50">
                                            <i class="fas fa-exclamation-triangle"></i>
                                    </span>
                                    <span class="text">Edit</span>
                                </a>
                                <a asp-action ="Delete" asp-route-id="@item.PId" class="btn btn-danger btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-trash"></i>
                                    </span>
                                    <span class="text">Delete</span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
